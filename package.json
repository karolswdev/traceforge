{
  "name": "traceforge",
  "version": "0.1.0",
  "description": "Traceforge: scaffold nested, multi-agent orchestration for Claude Code (+Codex/Gemini) and generate SRS/phase plans",
  "license": "MIT",
  "bin": { "traceforge": "dist/index.js" },
  "type": "module",
  "main": "dist/index.js",
  "files": ["dist", "README.md", "LICENSE", "CONTRIBUTING.md", "CODE_OF_CONDUCT.md"],
  "engines": { "node": ">=18" },
  "scripts": {
    "build": "tsc -p .",
    "dev": "tsx src/index.ts --help",
    "test": "vitest run --reporter dot",
    "coverage": "vitest run --coverage --reporter dot",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "commander": "^12.1.0",
    "ejs": "^3.1.10",
    "kleur": "^4.1.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "tsx": "^4.16.2",
    "typescript": "^5.6.2",
    "vitest": "^2.1.9",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.9.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "prettier": "^3.3.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0"
  },
  "lint-staged": {
    "*.{ts,js,md,json,yml,yaml}": [
      "prettier --write"
    ],
    "src/**/*.{ts,js}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "publishConfig": { "access": "public" },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karolswdev/traceforge.git"
  },
  "bugs": { "url": "https://github.com/karolswdev/traceforge/issues" },
  "homepage": "https://github.com/karolswdev/traceforge#readme",
  "keywords": ["traceforge", "orchestration", "agents", "claude", "codex", "gemini", "scaffolding", "npx", "cli", "srs"]
}
